# =============================================================================
# Terraform Variables Example
# Copy this file to terraform.tfvars and fill in your values
# =============================================================================

# General
project_name = "fproject"
environment  = "dev"
aws_region   = "us-east-1"

# VPC
vpc_cidr = "10.0.0.0/16"

# RDS
db_name              = "fproject_db"
db_username          = "fproject_user"
db_password          = "YOUR_SECURE_PASSWORD_HERE"  # Change this!
db_instance_class    = "db.t3.micro"
db_allocated_storage = 20

# EKS
eks_node_instance_types = ["t3.medium"]
eks_node_desired_size   = 2
eks_node_min_size       = 1
eks_node_max_size       = 3

# Existing Resources (기존 AWS 리소스)
existing_cognito_user_pool_name     = "User pool - rngxan"
existing_cognito_user_pool_id       = "us-east-1_oesTGe9D5"
existing_cognito_client_id          = ""  # AWS 콘솔에서 확인 후 입력
existing_lambda_pre_signup          = "CognitoPreSignUp"
existing_lambda_post_confirmation   = "CognitoPostConfirmation"
existing_lambda_post_authentication = "CognitoPostAuthentication"
